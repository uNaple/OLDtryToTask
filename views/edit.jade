doctype html
html
	head
		title #{title}
		style
			include style.css
	body
		table(border='1', cellpadding='7')
			tr 
				//td(colspan='1', bgcolor='#D3EDF6', align='center') id
				td(colspan='1', bgcolor='#D3EDF6', align='center') Заголовок
				td(colspan='1', bgcolor='#D3EDF6', align='center') Тип
				td(colspan='1', bgcolor='#D3EDF6', align='center') Постановщик
				td(colspan='1', bgcolor='#D3EDF6', align='center') Контроллер
				td(colspan='1', bgcolor='#D3EDF6', align='center') Исполнитель
				//td(colspan='1', bgcolor='#D3EDF6', align='center') Время постановки
				td(colspan='1', bgcolor='#D3EDF6', align='center') статус
				td(colspan='1', bgcolor='#D3EDF6', align='center') Описание

			tr
				form(method='post', action='/update')
					tr
						input(type='hidden', value=task.id, name='id')
						td
							input(type='text', value=task.name, name='name') 
						td 
							input(type='text', value=task.type, name='type', list='Users')
						td 
							input(type='text', value=task.director, name='director')
						td 
							input(type='text', value=task.controller, name='controller')
						td 
							input(type='text', value=task.executor, name='executor')
							//input(type='text', value=task.timeOfSet, name='timeOfSet')
						td 
							input(type='text', value=task.status, name='status')
						td 
							input(type='text', value=task.description, name='description')
					tr
							input(type='submit', value='Применить')